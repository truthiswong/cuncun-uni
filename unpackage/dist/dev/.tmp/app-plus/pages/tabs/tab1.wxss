
.tab1 {
	overflow: hidden;
}
.header {
	width: 100%;
	position: fixed;
	top: 0;
	z-index: 5;
	background-color: rgba(0, 0, 0, 0);
	vertical-align: center;
}
.header_active {
	width: 100%;
	position: fixed;
	top: 0;
	z-index: 5;
	background-color: white;
}
.header_icon image {
	width: 44rpx;
	height: 44rpx;
	margin: 30rpx 10rpx 0;
}
.content {
	width: 100%;
	height: 100%;
}
.cont_top {
	position: relative;
	width: 100%;
	height: 474rpx;
}
