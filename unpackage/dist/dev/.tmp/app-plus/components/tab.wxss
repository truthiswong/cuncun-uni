
.tab {
	border-bottom: 1rpx solid #ddd;
	box-sizing: border-box;
	padding: 0 30rpx;
	height: 80rpx;
	line-height: 80rpx;
}
.tab .col {
	text-align: center;
	height: 80rpx;
}
.tab .active {
	color: #00acff;
	border: 1rpx solid #ddd;
	border-bottom: 0;
	background-color: #fff;
	border-top-left-radius: 6rpx;
	border-top-right-radius: 6rpx;
	box-sizing: border-box;
}
.tab navigator {
	float: right;
	padding: 0 15rpx 0 30rpx;
}
.tab image {
	width: 50rpx;
	height: 50rpx;
	top: 13rpx;
	position: relative;
}
@media (min-width: 768px) {
.tab {
		height: 60rpx;
		line-height: 60rpx;
}
.tab .col {
		height: 60rpx;
}
.tab image {
		width: 30rpx;
		height: 30rpx;
		top: 5rpx;
}
}

